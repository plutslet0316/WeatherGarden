<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".TulipBook"
    android:background="#4BC5FF">

    <ImageView
        android:id="@+id/circle1"
        android:layout_width="109sp"
        android:layout_height="165sp"
        android:scaleType="fitXY"
        android:src="@drawable/circle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.04"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="24sp"
            android:layout_margin="16sp"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/tulip1"
                android:layout_width="48sp"
                android:layout_height="48sp"
                android:layout_marginTop="24sp"
                android:layout_marginBottom="16sp"
                android:background="@android:color/transparent"
                android:scaleType="fitXY"
                android:src="@drawable/tulip" />

            <ImageButton
                android:id="@+id/sunflower1"
                android:layout_width="48sp"
                android:layout_height="48sp"
                android:layout_marginTop="24sp"
                android:layout_marginBottom="16sp"
                android:background="@android:color/transparent"
                android:scaleType="fitXY"
                android:src="@drawable/sunflower" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/tul_img"
                android:layout_width="match_parent"
                android:layout_height="200sp"
                android:layout_margin="24sp"
                android:scaleType="fitXY"
                android:src="@drawable/tulip_image" />

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="12sp"
                android:layout_marginRight="12sp"
                android:layout_marginBottom="4sp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20sp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/title2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="튤립 (Tulip)"
                        android:textColor="#D99479"
                        android:textSize="32sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/diffi"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:textColor="#666666"
                        android:textSize="24sp"
                        android:text="" />

                    <TextView
                        android:id="@+id/flow"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:textColor="#666666"
                        android:textSize="24sp"
                        android:text="" />

                    <TextView
                        android:id="@+id/origin"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        android:text="" />

                    <TextView
                        android:id="@+id/light"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:textColor="#666666"
                        android:textSize="24sp"
                        android:text="" />

                    <TextView
                        android:id="@+id/temp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:textColor="#666666"
                        android:textSize="24sp"
                        android:text="" />

                    <TextView
                        android:id="@+id/water"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        android:text="" />

                    <TextView
                        android:id="@+id/soil"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        android:text="" />

                    <TextView
                        android:id="@+id/earth"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        android:text="" />

                    <TextView
                        android:id="@+id/coun"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#666666"
                        android:textStyle="bold"
                        android:textSize="24sp"
                        android:text="" />

                </LinearLayout>

            </ScrollView>

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>