<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SettingsFragment">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="28dp"
        android:layout_marginBottom="23dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/setting_icon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"

            android:src="@drawable/ic_baseline_settings_24" />

        <TextView
            android:id="@+id/location_set"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="10sp"
            android:gravity="center"
            android:text="설정"
            android:textColor="@color/black"
            android:textSize="26dp" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="168sp">


        <TextView
            android:id="@+id/noti_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="16sp"
            android:text="알림 설정"
            android:textColor="@color/black"
            android:textSize="24dp" />

        <View
            android:id="@+id/noti_box"
            android:layout_width="wrap_content"
            android:layout_height="86sp"
            android:layout_below="@+id/noti_title"
            android:layout_marginTop="16sp"
            android:background="@drawable/bg_settings"
            android:textColor="#ffffff" />

        <TextView
            android:id="@+id/noti_switch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/noti_title"
            android:layout_marginLeft="16sp"
            android:layout_marginTop="32sp"
            android:text="상단바 알림"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/noti_switch_small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/noti_switch"
            android:layout_marginTop="6sp"
            android:layout_marginLeft="16sp"
            android:text="상단바에 상태 표시를 나타냄"
            android:textColor="@color/black"
            android:textSize="14dp" />

        <Button
            android:id="@+id/noti_on"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_alignTop="@+id/noti_switch"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="136dp"

            android:layout_marginEnd="86dp"
            android:layout_toEndOf="@+id/noti_switch"
            android:background="#00ff0000"
            android:text="ON"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="14dp" />

        <Button
            android:id="@+id/noti_off"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_alignTop="@+id/noti_on"
            android:layout_marginStart="-86dp"
            android:layout_toEndOf="@+id/noti_on"
            android:background="#00ff0000"
            android:text="OFF"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="14dp" />

    </RelativeLayout>

</LinearLayout>