<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".gardenFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#b3f3f3">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <Button
                android:id="@+id/refresh"
                android:layout_marginTop="10sp"
                android:layout_marginLeft="10sp"
                android:layout_marginRight="10sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="갱신" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/time_differ"
                    android:layout_width="0sp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:inputType="textPersonName"
                    android:layout_margin="5sp"
                    android:hint="시간"
                    android:text="" />

                <Button
                    android:id="@+id/growup"
                    android:layout_width="0sp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_margin="5sp"
                    android:text="성장" />

            </LinearLayout>


            <TextView
                android:id="@+id/info"
                android:layout_marginLeft="10sp"
                android:layout_marginRight="10sp"
                android:layout_marginBottom="10sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp" />

            <HorizontalScrollView
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent">

                        <Button
                            android:id="@+id/ground1"
                            android:layout_margin="10sp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="1번 땅" />
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            <TextView
                                android:id="@+id/plant1"
                                android:layout_margin="10sp"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:ems="8"
                                android:textSize="18sp"
                                android:gravity="start|top"
                                android:inputType="textMultiLine" />

                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <ImageView
                                    android:id="@+id/plant1_img"
                                    android:layout_width="50sp"
                                    android:layout_height="100sp"
                                    android:scaleType="fitCenter"
                                    app:layout_constraintBaseline_toBottomOf="parent"
                                    app:layout_constraintBottom_toTopOf="@+id/dump1"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintHorizontal_bias="0.496"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toTopOf="parent"
                                    app:layout_constraintVertical_bias="1.0" />

                                <LinearLayout
                                    android:id="@+id/dump1"
                                    android:layout_width="match_parent"
                                    android:layout_height="80sp"
                                    android:orientation="vertical"
                                    app:layout_constraintBottom_toBottomOf="parent"></LinearLayout>
                            </androidx.constraintlayout.widget.ConstraintLayout>
                        </RelativeLayout>



                    </LinearLayout>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent">

                        <Button
                            android:id="@+id/ground2"
                            android:layout_margin="10sp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="2번 땅" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            <TextView
                                android:id="@+id/plant2"
                                android:layout_margin="10sp"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:ems="8"
                                android:textSize="18sp"
                                android:gravity="start|top"
                                android:inputType="textMultiLine" />
                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <ImageView
                                    android:id="@+id/plant2_img"
                                    android:layout_width="50sp"
                                    android:layout_height="100sp"
                                    android:scaleType="fitCenter"
                                    app:layout_constraintBaseline_toBottomOf="parent"
                                    app:layout_constraintBottom_toTopOf="@+id/dump2"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintHorizontal_bias="0.496"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toTopOf="parent"
                                    app:layout_constraintVertical_bias="1.0" />

                                <LinearLayout
                                    android:id="@+id/dump2"
                                    android:layout_width="match_parent"
                                    android:layout_height="80sp"
                                    android:orientation="vertical"
                                    app:layout_constraintBottom_toBottomOf="parent"></LinearLayout>
                            </androidx.constraintlayout.widget.ConstraintLayout>
                        </RelativeLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent">

                        <Button
                            android:id="@+id/ground3"
                            android:layout_margin="10sp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="3번 땅" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            <TextView
                                android:id="@+id/plant3"
                                android:layout_margin="10sp"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:ems="8"
                                android:textSize="18sp"
                                android:gravity="start|top"
                                android:inputType="textMultiLine" />
                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <ImageView
                                    android:id="@+id/plant3_img"
                                    android:layout_width="50sp"
                                    android:layout_height="100sp"
                                    android:scaleType="fitCenter"
                                    app:layout_constraintBaseline_toBottomOf="parent"
                                    app:layout_constraintBottom_toTopOf="@+id/dump3"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintHorizontal_bias="0.496"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toTopOf="parent"
                                    app:layout_constraintVertical_bias="1.0" />

                                <LinearLayout
                                    android:id="@+id/dump3"
                                    android:layout_width="match_parent"
                                    android:layout_height="80sp"
                                    android:orientation="vertical"
                                    app:layout_constraintBottom_toBottomOf="parent"></LinearLayout>
                            </androidx.constraintlayout.widget.ConstraintLayout>
                        </RelativeLayout>
                    </LinearLayout>
                </LinearLayout>
            </HorizontalScrollView>
        </LinearLayout>
    </RelativeLayout>
</FrameLayout>