<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GardenFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/unity_frame"
                android:layout_weight="1"
                android:orientation="vertical"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/watering_button"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10sp"
                        android:layout_weight="1"
                        android:background="@drawable/shape_round_square_white"
                        android:shadowRadius="20"
                        android:shadowColor="#42000000"
                        android:shadowDx="0"
                        android:shadowDy="0"
                        android:text="물주기" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/temperature_button"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10sp"
                        android:layout_weight="1"
                        android:background="@drawable/shape_round_square_white"
                        android:text="온도조절" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/planting_button"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10sp"
                        android:layout_weight="1"
                        android:background="@drawable/shape_round_square_white"
                        android:text="심기" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"

                    android:orientation="vertical">


                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/fertilizer_button"
                        android:layout_width="match_parent"
                        android:layout_height="0sp"
                        android:layout_margin="10sp"
                        android:layout_weight="1"
                        android:background="@drawable/shape_round_square_white"
                        android:text="영양주기" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/humidity_button"
                        android:layout_width="match_parent"
                        android:layout_height="0sp"
                        android:layout_margin="10sp"
                        android:layout_weight="1"
                        android:background="@drawable/shape_round_square_white"
                        android:text="습도조절" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/growing_button"
                        android:layout_width="match_parent"
                        android:layout_height="0sp"
                        android:layout_margin="10sp"
                        android:layout_weight="1"
                        android:background="@drawable/shape_round_square_white"
                        android:text="성장조절" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="120sp" />

        </LinearLayout>

    </RelativeLayout>
</FrameLayout>