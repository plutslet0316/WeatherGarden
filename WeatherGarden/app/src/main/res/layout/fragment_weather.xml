<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".weatherFragment"
    tools:layout_editor_absoluteX="11sp"
    tools:layout_editor_absoluteY="0sp">

    <!-- TODO: Update blank fragment layout -->

    <TextView
        android:id="@+id/location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="성남시 중원구 금광동"
        android:textAlignment="center"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/arrow_down"
        app:layout_constraintHorizontal_bias="0.701"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.117" />

    <ImageButton
        android:id="@+id/add"
        android:layout_width="36sp"
        android:layout_height="36sp"
        android:layout_marginEnd="32sp"
        android:background="@android:color/transparent"
        android:scaleType="fitXY"
        android:src="@drawable/ic_baseline_add_24"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.113" />

    <ImageButton
        android:id="@+id/arrow_down"
        android:layout_width="35sp"
        android:layout_height="32sp"
        android:layout_marginEnd="40sp"
        android:background="@android:color/transparent"
        android:src="@drawable/ic_baseline_keyboard_arrow_down_24"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/add"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.114" />

    <TextView
        android:id="@+id/temperature"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="26'c"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.751"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.357" />

    <TextView
        android:id="@+id/day"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18sp"
        android:text="05-31 12:23pm"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/location"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/condition"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="맑음"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.737"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/temperature"
        app:layout_constraintVertical_bias="0.016" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="48sp"
        android:text=""
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.846"
        app:layout_constraintStart_toEndOf="@+id/imageView5"
        app:layout_constraintTop_toBottomOf="@+id/condition"
        app:layout_constraintVertical_bias="0.044" />

    <TextView
        android:id="@+id/week_weather"
        android:layout_width="68sp"
        android:layout_height="25sp"
        android:text="주간날씨"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.093"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView5"
        app:layout_constraintVertical_bias="0.112" />

    <ImageButton
        android:id="@+id/imageView5"
        android:layout_width="176sp"
        android:layout_height="198sp"
        android:layout_marginTop="44sp"
        android:background="@android:color/transparent"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_baseline_cloud_24"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/condition"
        app:layout_constraintHorizontal_bias="0.293"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/day"
        app:layout_constraintVertical_bias="0.0" />

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16sp"
        android:scrollbars="none"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/week_weather"
        app:layout_constraintVertical_bias="0.105">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="64sp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15sp"
                android:layout_marginRight="15sp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/today"
                    android:layout_width="match_parent"
                    android:layout_height="24sp"
                    android:text="5.31(화)"
                    android:textAlignment="center" />

                <ImageView
                    android:id="@+id/today_image"
                    android:layout_width="match_parent"
                    android:layout_height="58sp"
                    android:src="@drawable/ic_baseline_wb_sunny_24" />

                <TextView
                    android:id="@+id/today_temp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="26'c"
                    android:textAlignment="center" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="64sp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15sp"
                android:layout_marginRight="15sp"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/day2"
                    android:layout_width="match_parent"
                    android:layout_height="24sp"
                    android:text="6.01(수)"
                    android:textAlignment="center" />

                <ImageView
                    android:id="@+id/day2_image"
                    android:layout_width="match_parent"
                    android:layout_height="58sp"
                    android:src="@drawable/ic_baseline_cloud_24" />

                <TextView
                    android:id="@+id/day_temp2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="23'c"
                    android:textAlignment="center" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="64sp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15sp"
                android:layout_marginRight="15sp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/day3"
                    android:layout_width="match_parent"
                    android:layout_height="24sp"
                    android:text="06.02(목)"
                    android:textAlignment="center" />

                <ImageView
                    android:id="@+id/day3_image"
                    android:layout_width="match_parent"
                    android:layout_height="57sp"
                    android:src="@drawable/ic_baseline_bolt_24" />

                <TextView
                    android:id="@+id/day_temp3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="26'c"
                    android:textAlignment="center" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="64sp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15sp"
                android:layout_marginRight="15sp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/day4"
                    android:layout_width="match_parent"
                    android:layout_height="24sp"
                    android:text="06.03(금)"
                    android:textAlignment="center" />

                <ImageView
                    android:id="@+id/day4_image"
                    android:layout_width="match_parent"
                    android:layout_height="58sp"
                    android:src="@drawable/ic_baseline_cloud_24" />

                <TextView
                    android:id="@+id/day_temp4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="26'c"
                    android:textAlignment="center" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="64sp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15sp"
                android:layout_marginRight="15sp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/day5"
                    android:layout_width="match_parent"
                    android:layout_height="24sp"
                    android:text="06.03(금)"
                    android:textAlignment="center" />

                <ImageView
                    android:id="@+id/day5_image"
                    android:layout_width="match_parent"
                    android:layout_height="58sp"
                    android:src="@drawable/ic_baseline_cloud_24" />

                <TextView
                    android:id="@+id/day_temp5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="26'c"
                    android:textAlignment="center" />
            </LinearLayout>
        </LinearLayout>


    </HorizontalScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>